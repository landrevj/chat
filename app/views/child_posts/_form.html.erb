<%= form_with(model: child_post, local: true) do |form| %>
  <div class="modal-body">
    <% if child_post.errors.any? %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <button type="button" class="close" data-dismiss="alert">
            <span aria-hidden="true">&times;</span>
          </button>
          <% child_post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </div>
    <% end %>

    <div class="form-group">
      <%= form.label :body, for: 'child-post-body' %>
      <%= form.text_area :body, class: 'form-control', id: 'child-post-body', rows: '3' %>
    </div>

    <%= form.label 'Image' %>
    <div class="form-group">
      <%= form.text_field :remote_picture_url, class: 'form-control', id: :child_post_picture_url, placeholder: 'url upload' %>
    </div>
    
    <div class="form-group">
      <%= form.file_field :picture, class: 'form-control-file', id: :child_post_picture %>
    </div>

    <%= form.hidden_field :root_post_id %>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" id="close" data-dismiss="modal">Close</button>
    <%= form.submit "Post", class: ['btn', 'btn-primary'] %>
  </div>
<% end %>
