<div class="tab-pane fade show active" id="v-pills-account" role="tabpanel" aria-labeledby="v-pills-account-tab">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-row">
      <div class="form-group col-md-8">
        <%= f.label :email, for: 'email' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", type: 'email', class: 'form-control', id: 'email' %>
      </div>
      <div class="form-group col-md-4">
        <%= f.label :user_name, class: 'title', for: 'user-name' %>
        <%= f.text_field :user_name, required: true, type: 'text', class: 'form-control', id: 'user-name' %>
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.label :password, 'New Password', for: 'new-password' %>
        <%= f.password_field :password, autocomplete: "off", type: 'password', class: 'form-control', id: 'new-password' %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :password_confirmation, 'New Password Confirmation', for: 'confirm-password' %>
        <%= f.password_field :password_confirmation, autocomplete: "off", type: 'password', class: 'form-control', id: 'confirm-password' %>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col">
        <%= f.label :current_password, for: 'current-password' %>
        <%= f.password_field :current_password, autocomplete: "off", type: 'password', class: 'form-control', id: 'current-password', 'aria-describedby': 'need-pass' %>
        <small id="need-pass" class="form-text text-muted">Only required to change your password.</small>
      </div>
    </div>

    <%= f.submit "Update Account", class: ['btn', 'btn-primary'] %>
  <% end %>

  <br>
  
  <%= button_to "Delete Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: ['btn', 'btn-danger'] %>
</div>
