<div class="card register">
  <div class="text-icon">>_</div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="field" id="email">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email" %>
    </div>

    <div class="field" id="user-name">
      <%= f.text_field :user_name, required: true, placeholder: "username" %>
    </div>

    <div class="field" id="password">
      <%= f.password_field :password, autocomplete: "off", placeholder: "password (length >= 6)" %>
    </div>

    <div class="field" id="password-confirmation">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "confirm password" %>
    </div>

    <br>

    <div class="actions" id="submit">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
</div>
