<div class="container login-form">
  <div class="row text-light">
    <div class="absolute-center is-responsive">
      <%= devise_error_messages! %>
      <div id="logo-container">>_</div>
      <div class="col-sm-12 col-md-10 col-md-offset-1">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", type: 'email', class: ['form-control', 'top'] %>
            <%= f.text_field :user_name, required: true, placeholder: "username", class: ['form-control', 'center'] %>
            <%= f.password_field :password, autocomplete: "off", placeholder: "password", type: 'password', class: ['form-control', 'center'] %>
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "confirm password", type: 'password', class: ['form-control', 'bottom']  %>
          </div>

          <div class="form-group">
            <%= f.submit "Sign up", class: ['btn', 'btn-success', 'btn-block'] %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
