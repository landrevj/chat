<div class="card register">
  <div class="text-icon">>_</div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email" %>
    </div>

    <div class="field">
      <%= f.text_field :user_name, required: true, placeholder: "username" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", placeholder: "password (length >= 6)" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "confirm password" %>
    </div>

    <br>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  
  <% end %>

  <%= render "devise/shared/links" %>
</div>
