<div class="container login-form">
  <div class="row text-light">
    <div class="absolute-center is-responsive">
      <div id="logo-container">>_</div>
      <div class="col-sm-12 col-md-10 col-md-offset-1">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", type: 'email', class: ['form-control', 'top'] %>
            <%= f.password_field :password, autocomplete: "off", placeholder: "password", type: 'password', class: ['form-control', 'bottom'] %>
          </div>
          
          <div class="form-group">
            <%= f.submit "Login", class: ['btn', 'btn-success', 'btn-block'] %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="form-group remember-me">
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, for: 'user_remember_me' %>
              </div>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
