<div class="root-post post">
        <div class="post-head">
          <div class="post-details">
            <div class="post-user-name post-detail"><strong><%= root_post.user.user_name %></strong> </div>
            <div class="post-subject post-detail"><%= root_post.subject %> </div>
            <div class="post-id post-detail"><strong><%= root_post.id %></strong> </div>
            <div class="post-created post-detail"><%= root_post.created_at %></div>
          </div>

          <div class="post-links">
            <%= link_to 'Link', root_post %>
            <% if root_post.user.id == current_user.id %>
              <td><%= link_to 'Edit', edit_root_post_path(root_post) %></td>
              <td><%= link_to 'Destroy', root_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </div>
        </div>
        
        <div class="post-body"> <%= root_post.body %> </div>

    <% if root_post.picture.present? %>
      <div class="post-image">
        <%= image_tag(root_post.picture_url, width: 600) %>
      </div>
    <% end %>
</div>
