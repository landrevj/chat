<div class="root-post post <%= 'sticky' if root_post.sticky %>" id="root-<%= root_post.id %>">
  <a class="post-anchor" name="#<%= root_post.id %>"></a>
  <div class="post-contents">
    <div class="post-left-col">
      <div class="post-details">
        <div class="post-detail" id="user-name" title="username"><strong><%= root_post.user.anonymous ? 'Anonymous' : root_post.user.user_name %></strong> </div>
        <% if root_post.subject != '' %><div class="post-detail" id="subject" title="subject"><strong><%= root_post.subject %></strong></div> <% end %>
        <div class="post-detail" id="id" title="id"><a><strong>##<%= root_post.id %></strong></a></div>
        <div class="post-detail" id="timestamp-created" title="<%= root_post.created_at %>"><strong><%= time_ago_in_words(root_post.created_at) %> ago </strong></div>
        <% if root_post.created_at != root_post.updated_at %>
        <div class="post-detail" id="timestamp-edited" title="<%= root_post.updated_at %>"><strong><%= time_ago_in_words(root_post.updated_at) %> ago</strong></div>
        <% end %>
      </div>
      <div class="post-body"><p><%= markdown root_post.body %></p></div>
    </div>

    <div class="post-right-col">
      <div class="post-links">
        <% if can? :modify, root_post %>
          <%= link_to [board, root_post], method: :delete, data: { confirm: 'Are you sure?' }, class: "delete" do %><i class="material-icons">delete</i><% end %>      
          <%= link_to [:edit, board, root_post], class: "edit" do %><i class="material-icons">create</i><% end %>
        <% end %>
        <%= link_to [board, root_post], class: "link" do %> <i class="material-icons">link</i><% end %>      
      </div>
      <% if root_post.picture.present? %>
        <div class="post-image">
          <%= link_to root_post.picture_url do %>
            <%= image_tag root_post.picture_url(:thumb) %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <%= replies root_post if root_post.root_reply_ids.any? || root_post.child_reply_ids.any? %>
</div>
