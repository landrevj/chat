<div class="root-post post-card <%= root_post.picture.present? ? 'has-image' : 'no-image' %> <%= 'owned' if root_post.user.id == current_user.id %>">
    <% if root_post.picture.present? %>
      <div class="post-image">
        <%= link_to root_post.picture_url do %>
          <%= image_tag root_post.picture_url(:thumb_square) %>
        <% end %>
      </div>
    <% end %>
    <div class="details <%= 'has-subject' if root_post.subject.present? %>">
        <div class="top-row">
            <div class="user-name post-detail"><strong><%= root_post.user.user_name if !current_user.anonymous %><%= "Anonymous" if current_user.anonymous %></strong></div>
            <div class="count post-detail" title="post count / file count"><strong><%= root_post.child_posts.size + 1 %> / <%= root_post.file_count %></strong></div>
        </div>
        <div class="subject post-detail"><strong><%= root_post.subject %></strong></div>
    </div>
    
    <div class="body"><p><%= markdown root_post.body %></p></div>

    <div class="post-card-links">
        <div class="links-wrapper">
            <% if root_post.user.id == current_user.id %>
                <%= link_to root_post, method: :delete, data: { confirm: 'Are you sure?' }, class: "delete" do %><i class="material-icons">delete</i><% end %>
                <%= link_to edit_root_post_path(root_post), class: "edit" do %><i class="material-icons">create</i><% end %>
            <% end %>
            <%= link_to root_post, class: "link" do %> <i class="material-icons">link</i><% end %>
        </div>
    </div>
</div>
